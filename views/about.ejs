    <script>
      $(document).ready(function() {
          var $slider = $('.before-after-slider');
          var $handle = $slider.find('.handle');
          var $sliderImg = $slider.find('.slider img');
          
          var dragging = false;

          function updateSlider(e) {
              var offsetX = e.pageX - $slider.offset().left;
              if (offsetX < 0) offsetX = 0;
              if (offsetX > $slider.width()) offsetX = $slider.width();
              
              $sliderImg.css('width', offsetX + 'px');
              $handle.css('left', offsetX + 'px');
          }

          $handle.on('mousedown', function() {
              dragging = true;
          });

          $(document).on('mouseup', function() {
              dragging = false;
          });

          $(document).on('mousemove', function(e) {
              if (dragging) {
                  updateSlider(e);
              }
          });

          // Initialize slider to center
          updateSlider({ pageX: $slider.offset().left + $slider.width() / 2 });
      });

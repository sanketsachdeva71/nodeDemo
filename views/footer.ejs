.footer {
    background-color: #FBF5E5;;
    padding: 40px 0;
    border-top: 3px solid #000; /* Black top border */
}

.container {
    width: 80%;
    margin: 0 auto;
    text-align: center;
}

.footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.footer-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 20px;
    margin-bottom: 20px;
}

.treatment-item {
    background-color: #e9ecef;
    padding: 20px;
    border-radius: 8px;
    transition: background-color 0.3s ease;
}

.treatment-item:hover {
    background-color: #d8d8d8;
}

.footer-links {
    margin: 20px 0;
}

.footer-links a {
    text-decoration: none;
    color: #333;
    margin: 0 10px;
}

.social-media {
    margin: 20px 0;
}

.social-media a {
    font-size: 24px;
    margin: 0 10px;
    color: #333;
}

.newsletter-signup {
    display: flex;
    justify-content: center;
    margin-top: 10px;
}

.newsletter-signup input {
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-right: 10px;
    width: 200px;
}

.newsletter-signup .btn {
    background-color: #000000;
    color: white;
    border: none;
    padding: 10px 15px;
    border-radius: 4px;
    cursor: pointer;
}

.newsletter-signup .btn:hover {
    background-color: #0056b3;
}

footer p {
    text-align: center;
    margin-top: 20px;
    color: #666;
}



